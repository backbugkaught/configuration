alias r="source ~/.bashrc"
alias rm="rm -iv"
alias mv="mv -iv"
alias df="df -h"

alias \
	ls='ls --color=auto' \
 	l='ls -lAFh'  \
 	la='ls -lFh' \
 	lr='ls -tRFh' \
 	lt='ls -ltFh' \
 	ll='ls -l' \
